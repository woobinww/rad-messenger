{
  "name": "rad-messenger-client",
  "version": "1.0.1",
  "description": "messenger for gamtan rad. dept.",
  "author": "woobin",
  "main": "main.js",
  "build": {
    "appId": "com.woobinww.radmessenger",
    "productName": "Rad Messenger",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "style.css",
      "vendor/**",
      "sounds/**",
      "assets/**"
    ],
    "extraResources": [
      {
        "from": "build/config.default.json",
        "to": "config.default.json"
      },
      {
        "from": "sounds",
        "to": "sounds"
      },
      {
        "from": "vendor",
        "to": "vendor"
      }
    ],
    "win": {
      "target": "nsis",
      "artifactName": "RadMessenger-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "build/installer.nsh"
    }
  },
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  }
}
